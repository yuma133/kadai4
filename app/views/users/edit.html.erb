<div class="row">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count ,"error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
	<div class="col-xs-4">
	<h1>User info</h1>
		<%= form_for(@user) do |u| %>
		<%= u.label :Name %>
		<%= u.text_field :name %>
		<h4>Image</h4>
		<%= u.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
		<%= u.label :introduction, class: "intro" %>
		<%= u.text_area :introduction, class: "intro" %>
		<%= u.submit "Update User", class: "btn btn-default" %>
		<% end %>
	</div>
</div>